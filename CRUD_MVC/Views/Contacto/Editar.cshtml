@model CRUD_MVC.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:30px">

    <div class="panel panel-info">
        <div class="panel-heading">
            <h2>Editar contacto</h2>
        </div>

        <div class="panel-body">
            <form action="@Url.Action("Editar", "Contacto")" method="post" >
                <input type="hidden" class="form-control" name="IdContacto" value="@Html.DisplayTextFor(m => m.IdContacto)" />
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="Nombre" value="@Html.DisplayTextFor(m => m.Nombre)" required/>
                </div>

                <div class="form-group">
                    <label>Apellido</label>
                    <input type="text" class="form-control" name="Apellido" value="@Html.DisplayTextFor(m => m.Apellido)" required/>
                </div>

                <div class="form-group">
                    <label>Numero</label>
                    <input type="text" class="form-control" name="Numero" value="@Html.DisplayTextFor(m => m.Numero)" required/>
                </div>

                <div class="form-group">
                    <label>Correo</label>
                    <input type="email" class="form-control" name="Correo" value="@Html.DisplayTextFor(m => m.Correo)" required/>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="@Url.Action("Inicio","Contacto")" class="btn btn-danger">Volver</a>
            </form>

        </div>
    </div>

</div>

