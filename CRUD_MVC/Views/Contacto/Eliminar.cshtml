@model CRUD_MVC.Models.Contacto

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top:30px">

    <div class="panel panel-warning">
        <div class="panel-heading">
            <h2>Eliminar contacto</h2>
        </div>

        <div class="panel-body">
            <div class="alert alert-danger">
                ¿Eliminar el contacto @Html.DisplayTextFor(m => m.Nombre) @Html.DisplayTextFor(m => m.Apellido)?
            </div>
            <form action="@Url.Action("Eliminar","Contacto")" method="post">
                <input type="hidden" class="form-control" name="IdContacto" value="@Html.DisplayTextFor(m => m.IdContacto)" />
                <button class="btn btn-danger" type="submit">Eliminar</button>
                <a href="@Url.Action("Inicio", "Contacto")" class="btn btn-default">Cancelar</a>
            </form>

        </div>
    </div>

</div>
